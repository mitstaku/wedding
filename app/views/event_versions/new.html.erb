        </div>
        <%= f.text_field :flower_cost, class: "event-cost-input", id: "flower-cost-input", placeholder: "挙式の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :flower_detail, class: "event-detail-input", id: "flower-detail-input", placeholder: "備考" %>
        

        <%# 印刷物 %>
