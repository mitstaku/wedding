<div id="event-form-container">
  <header id="event-form-header">
  </header>
  <div id="event-form-main">
    <h2 id="event-form-title">イベントの概要を入力</h2>
    
    <%= form_with model: @event_form, url: event_event_versions_path(@event), local: true  do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        
      <div id="new-event">

        <%# ゲスト %>
        <div class="event-name-label">
          ゲスト人数（大人）
        </div>
        <%= f.text_field :adult_count, class:"event-name-input", id:"adult_count-input", placeholder:"大人の参加人数を入力", maxlength:"40" %>
        <div class="event-name-label">
          ゲスト人数（子供）
        </div>
        <%= f.text_field :child_count, class:"event-name-input", id:"child_count-input", placeholder:"子供の参加人数を入力", maxlength:"40" %>

        <%# 挙式 %>
        <div class="event-name-label">
          挙式
        </div>
        <%= f.collection_select(:ceremony_category_id, CeremonyCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"ceremony-category"}) %>
        <div class="event-cost-label">
          挙式の費用
        </div>
        <%= f.text_field :ceremony_cost, class: "event-cost-input", id: "ceremony-cost-input", placeholder: "挙式の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :ceremony_detail, class: "event-detail-input", id: "ceremony-detail-input", placeholder: "備考" %>
        

        <%# 料理 %>
        <div class="event-name-label">
          料理
        </div>
        <%= f.collection_select(:food_category_id, FoodCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"food-category"}) %>
        <div class="event-cost-label">
          料理の費用
        </div>
        <%= f.text_field :food_cost, class: "event-cost-input", id: "food-cost-input", placeholder: "料理の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :food_detail, class: "event-detail-input", id: "food-detail-input", placeholder: "備考" %>
        

        <%# 会場 %>
        <div class="event-name-label">
          会場
        </div>
        <%= f.collection_select(:venue_category_id, VenueCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"venue-category"}) %>
        <div class="event-cost-label">
          会場の費用
        </div>
        <%= f.text_field :venue_cost, class: "event-cost-input", id: "venue-cost-input", placeholder: "会場の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :venue_detail, class: "event-detail-input", id: "venue-detail-input", placeholder: "備考" %>
        

        <%# 衣装 %>
        <div class="event-name-label">
          衣装
        </div>
        <%= f.collection_select(:costume_category_id, CostumeCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"costume-category"}) %>
        <div class="event-cost-label">
          衣装の費用
        </div>
        <%= f.text_field :costume_cost, class: "event-cost-input", id: "costume-cost-input", placeholder: "衣装の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :costume_detail, class: "event-detail-input", id: "costume-detail-input", placeholder: "備考" %>
        

        <%# 美容 %>
        <div class="event-name-label">
           美容
        </div>
        <%= f.collection_select(:beauty_category_id, BeautyCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"beauty-category"}) %>
        <div class="event-cost-label">
