        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :print_detail, class: "event-detail-input", id: "print-detail-input", placeholder: "備考" %>
        
        
        <%# 演出 %>
        <div class="event-name-label">
          演出
