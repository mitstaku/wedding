        <div class="event-cost-label">
          引出物の費用
        </div>
        <%= f.text_field :gift_cost, class: "event-cost-input", id: "gift-cost-input", placeholder: "挙式の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :gift_detail, class: "event-detail-input", id: "gift-detail-input", placeholder: "備考" %>
        
        
        <%# 前撮り %>
        <div class="event-name-label">
          前撮り
        </div>
        <%= f.collection_select(:pre_ceremony_id, PreCeremonyCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"pre_ceremony-category"}) %>
        <div class="event-cost-label">
          前撮りの費用
        </div>
        <%= f.text_field :pre_ceremony_cost, class: "event-cost-input", id: "pre_ceremony-cost-input", placeholder: "挙式の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :pre_ceremony_detail, class: "event-detail-input", id: "pre_ceremony-detail-input", placeholder: "備考" %>
      </div>
      
      <div id="total-cost-display">
        合計金額: <span id="total-cost">0</span> 円
      </div>

      <%# 下部ボタン %>
      <div id="event-form-buttons">
        <%= f.submit "登録" ,class:"submit-btn" %>
        <%=link_to 'もどる', root_path, class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>
  </div>
  <footer id="event-form-footer">
  </footer>
</div>




