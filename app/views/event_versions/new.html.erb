        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :beauty_detail, class: "event-detail-input", id: "beauty-detail-input", placeholder: "備考" %>
        

        <%# 装花 %>
        <div class="event-name-label">
          装花
        </div>
