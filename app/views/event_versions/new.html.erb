        <%= f.collection_select(:staging_category_id, StagingCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"staging-category"}) %>
        <div class="event-cost-label">
          演出の費用
        </div>
        <%= f.text_field :staging_cost, class: "event-cost-input", id: "staging-cost-input", placeholder: "挙式の費用を入力" %>
        <div class="event-detail-label">
          備考
        </div>
        <%= f.text_area :staging_detail, class: "event-detail-input", id: "staging-detail-input", placeholder: "備考" %>
        
        
        <%# 写真 %>
        <div class="event-name-label">
          写真
        </div>
        <%= f.collection_select(:photo_category_id, PhotoCategory.all, :id, :name, { prompt: "選択してください" }, {class:"select-box", id:"photo-category"}) %>
